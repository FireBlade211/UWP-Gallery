                            </Run>
                        </TextBlock>

                        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Clone the Git repository" AutomationProperties.HeadingLevel="Level2" x:Name="gitCloneHeaderBlock"/>

                        <TextBlock FontFamily="Consolas" IsTextSelectionEnabled="True" AutomationProperties.LabeledBy="{x:Bind gitCloneHeaderBlock}" Text="git clone https://github.com/FireBlade211/UWP-Gallery.git"/>
                    </StackPanel>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </StackPanel>
</Page>
