<Page
    x:Class="UWPGallery.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPGallery"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters">

    <Page.Resources>
        <converters:CollectionVisibilityConverter x:Key="collectionVisibilityConverter"/>
    </Page.Resources>

    <ScrollViewer>
        <Grid RowSpacing="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid RowSpacing="6" Padding="0,0,0,32">
                <Grid.Background>
                    <LinearGradientBrush>
                        <GradientStop Offset="0" Color="BlueViolet"/>
                        <GradientStop Offset="1" Color="DarkViolet"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock RequestedTheme="Dark" Margin="32,32,0,0" Style="{StaticResource HeaderTextBlockStyle}">UWP Gallery</TextBlock>
                <TextBlock RequestedTheme="Dark" Margin="32,0,0,0" Grid.Row="1" Style="{StaticResource SubtitleTextBlockStyle}">Explore UWP controls and APIs in action</TextBlock>
                <TextBlock RequestedTheme="Dark" Margin="32,0,0,0" x:Name="OSVerLabel" Grid.Row="2" Style="{StaticResource BodyTextBlockStyle}">[Unknown OS version]</TextBlock>

                <Button RequestedTheme="Dark" Background="#1affffff" Margin="0,0,32,0" Grid.Row="1" HorizontalAlignment="Right" Click="Button_Click">Random sample</Button>

                <HyperlinkButton Foreground="#baffffff" Grid.Row="2" Margin="0,0,32,0" HorizontalAlignment="Right" ToolTipService.ToolTip="https://learn.microsoft.com/windows/uwp"
                                 NavigateUri="https://learn.microsoft.com/windows/uwp" RequestedTheme="Dark">UWP documentation</HyperlinkButton>
            </Grid>

            <Grid Margin="32,32,0,0" Grid.Row="1" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <VisualStateManager.VisualStateGroups>
                    <!--  Visual states reflect the application's window size  -->
                    <VisualStateGroup x:Name="LayoutVisualStates">
                        <VisualState x:Name="WideLayout">
                            <VisualState.StateTriggers>
                                <AdaptiveTrigger MinWindowWidth="{StaticResource Breakpoint640Plus}" />
                            </VisualState.StateTriggers>
                        </VisualState>
                        <VisualState x:Name="NarrowLayout">
                            <VisualState.StateTriggers>
                                <AdaptiveTrigger MinWindowWidth="0" />
                            </VisualState.StateTriggers>
                            <VisualState.Setters>
                                <Setter Target="itemGridView.Padding" Value="4,0,4,36" />
                                <Setter Target="itemGridView.ItemContainerStyle" Value="{StaticResource IndentedGridViewItemStyleSmall}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>

                <StackPanel Orientation="Horizontal" Spacing="8" Visibility="{x:Bind FavoriteItems, Converter={StaticResource collectionVisibilityConverter}}">
                    <TextBlock Text="Favorite samples" x:Name="favoriteSamplesBlock" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Foreground="{StaticResource SystemColorGrayTextBrush}"
                               Text="{x:Bind FavoriteItems.Count, Mode=OneWay}"/>
                </StackPanel>

                <GridView
            x:Name="favoritesGridView"
            Padding="24,16,24,0"
            AutomationProperties.LabeledBy="{x:Bind favoriteSamplesBlock}"
            Visibility="{x:Bind FavoriteItems, Converter={StaticResource collectionVisibilityConverter}}"
            IsItemClickEnabled="True"
            IsSwipeEnabled="False"
            ItemContainerStyle="{StaticResource IndentedGridViewItemStyle}"
            ItemTemplate="{StaticResource ControlItemTemplate}"
            SelectionMode="None"
            Grid.Row="1"
            ItemsSource="{x:Bind FavoriteItems, Mode=OneWay}"
            ItemClick="GVItemClick">
                </GridView>

                <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="2" Visibility="{x:Bind NewSamples, Converter={StaticResource collectionVisibilityConverter}}">
                    <TextBlock x:Name="newSamplesBlock" Text="New samples" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Foreground="{StaticResource SystemColorGrayTextBrush}"
                               Text="{x:Bind NewSamples.Count, Mode=OneWay}"/>
                </StackPanel>
                

                <GridView
            x:Name="newSamplesGridView"
            Padding="24,16,24,0"
            IsItemClickEnabled="True"
            IsSwipeEnabled="False"
            AutomationProperties.LabeledBy="{x:Bind newSamplesBlock}"
            Visibility="{x:Bind NewSamples, Converter={StaticResource collectionVisibilityConverter}}"
            ItemContainerStyle="{StaticResource IndentedGridViewItemStyle}"
            ItemTemplate="{StaticResource ControlItemTemplate}"
            SelectionMode="None"
            Grid.Row="3"
            ItemsSource="{x:Bind NewSamples, Mode=OneWay}"
            ItemClick="GVItemClick">
                </GridView>

                <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="4" Visibility="{x:Bind UpdatedSamples, Converter={StaticResource collectionVisibilityConverter}}">
                    <TextBlock x:Name="updatedSamplesBlock" Text="Updated samples" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Foreground="{StaticResource SystemColorGrayTextBrush}"
                               Text="{x:Bind UpdatedSamples.Count, Mode=OneWay}"/>
                </StackPanel>
                

                <GridView
            x:Name="updatedGridView"
            Padding="24,16,24,0"
            AutomationProperties.LabeledBy="{x:Bind updatedSamplesBlock}"
            IsItemClickEnabled="True"
            IsSwipeEnabled="False"
            ItemContainerStyle="{StaticResource IndentedGridViewItemStyle}"
            ItemTemplate="{StaticResource ControlItemTemplate}"
            SelectionMode="None"
            Grid.Row="5"
            Visibility="{x:Bind UpdatedSamples, Converter={StaticResource collectionVisibilityConverter}}"
            ItemsSource="{x:Bind UpdatedSamples, Mode=OneWay}"
            ItemClick="GVItemClick">
                </GridView>

                <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="6" Visibility="{x:Bind AllItems, Converter={StaticResource collectionVisibilityConverter}}">
                    <TextBlock Text="All samples" x:Name="allSamplesBlock" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Foreground="{StaticResource SystemColorGrayTextBrush}"
                               Text="{x:Bind AllItems.Count, Mode=OneWay}"/>
                </StackPanel>

                <GridView
            x:Name="allGridView"
            Padding="24,16,24,0"
            IsItemClickEnabled="True"
            IsSwipeEnabled="False"
            AutomationProperties.LabeledBy="{x:Bind allSamplesBlock}"
            Visibility="{x:Bind AllItems, Converter={StaticResource collectionVisibilityConverter}}"
            ItemContainerStyle="{StaticResource IndentedGridViewItemStyle}"
            ItemTemplate="{StaticResource ControlItemTemplate}"
            SelectionMode="None"
            Grid.Row="7"
            ItemsSource="{x:Bind AllItems, Mode=OneWay}"
            ItemClick="GVItemClick">
                </GridView>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
